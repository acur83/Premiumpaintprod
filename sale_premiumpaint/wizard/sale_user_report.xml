<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_sale_user_report_wizard" model="ir.ui.view">
    <field name="name">sale.user.report.wizard.form</field>
    <field name="model">sale.user.report</field>
    <field name="arch" type="xml">
      <form string="Ventas por usuario">
        <group>
          <field name="start_date"/>
          <field name="end_date"/>
        </group>
        <group>
          <field name="user_id"/>
        </group>
        <footer>
          <button name="generate_report" string="Imprimir" type="object" class="btn-primary"/>
          <button string="Cancelar" class="btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>
  <record id="action_sale_user_report_action" model="ir.actions.act_window">
    <field name="name">Ventas por usuario</field>
    <field name="res_model">sale.user.report</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_sale_user_report_wizard"/>
    <field name="target">new</field>
  </record>
  <menuitem id="menu_sale_user_report" name="Ventas por usuario" parent="sale.menu_sale_report" sequence="101" action="action_sale_user_report_action"/>
</odoo>

