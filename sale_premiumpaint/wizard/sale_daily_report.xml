<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saledaily">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
          <h2 class="text-center">Reporte Diario de Ventas</h2>

          <div class="row mt32 mb32">
            <div class="col-xs-3">
              <strong>Fecha Impresion</strong>:<br/>
              <t t-esc="datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
            </div>
            <div class="col-xs-3">
              <strong>Reporte del dia</strong>:<br/>
              <span t-esc="date_at"/>
            </div>
          </div>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>
                  <strong>Tienda</strong>
                </th>
                <th>
                  <strong>Contado</strong>
                </th>
                <th>
                  <strong>Credito</strong>
                </th>
                <th class="text-right">
                  <strong>Ventas</strong>
                </th>
              </tr>
            </thead>
            <tbody>
              <t t-set="sum_ventas_value" t-value="0"/>
              <t t-foreach="data" t-as="sale">
                <t t-set="sum_ventas_value" t-value="sum_ventas_value + sale['amount_total']"/>
                <tr>
                  <td>
                    <span t-esc="sale['warehouse_id'][1]"/>
                  </td>
                  <td>
                    <span t-esc="sale['Contado']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                  </td>
                   <td>
                    <span t-esc="sale['Credito']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                  </td>
                  <td class="text-right">
                    <span t-esc="sale['amount_total']" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                  </td>
                </tr>
              </t>
            </tbody>
          </table>
        </div>
            </t>
        </t>
    </template>
    <report
            id="action_report_saledaily"
            model="sale.daily.report"
            string="Reporte diario Ventas"
            report_type="qweb-pdf"
            name="sale_premiumpaint.report_saledaily"
            file="sale_premiumpaint.report_saledaily"
            />
    
    <record id="view_sale_daily_report" model="ir.ui.view">
        <field name="name">Reporte diario de ventas</field>
        <field name="model">sale.daily.report</field>
        <field name="arch" type="xml">
            <form string="Selecciona una opcion">
                <group>
                    <group>
                        <field name="compute_at_date" widget="radio"/>
                        <field name="date" attrs="{'invisible': [('compute_at_date', '=', 0)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="open_report" string="Reporte PDF" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_sale_daily_report" model="ir.actions.act_window">
        <field name="name">Report diario de ventas</field>
        <field name="res_model">sale.daily.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sale_daily_report"/>
        <field name="target">new</field>
        <field name="context">{'default_compute_at_date': 0}</field>
    </record>
    <menuitem id="menu_sale_daily_report" name="Reporte diario de Ventas" parent="sale.menu_sale_report" sequence="100" action="action_sale_daily_report"/>
</odoo>

